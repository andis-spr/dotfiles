[module/battery]
type = internal/battery
full-at = 96

; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC

; poll-interval = 5
time-format = %kh%Mm
format-charging = <label-charging>
format-discharging = <label-discharging>
label-charging = ~%percentage%%
label-discharging = %percentage%%%time%
label-full = 
label-charging-foreground = ${colors.foreground}
label-discharging-foreground = #a89984
label-full-foreground = ${colors.foreground}
label-charging-padding = 0
label discharging-padding = 0
label-full-padding = 0

[module/network]
type = internal/network
interface = wlp3s0
; Available tags:
;   <label-connected> (default)
;   <ramp-signal>
format-connected = %{A1:$HOME/.config/i3/scripts/float-nmtui-wifi-list:}<label-connected>%{A}

; Available tags:
;   <label-disconnected> (default)
format-disconnected = %{A1:$HOME/.config/i3/scripts/float-nmtui-wifi-list:}<label-disconnected>%{A}

; Available tags:
;   <label-connected> (default)
;   <label-packetloss>
;   <animation-packetloss>
format-packetloss = <animation-packetloss> <label-connected>

; All labels support the following tokens:
;   %ifname%    [wireless+wired]
;   %local_ip%  [wireless+wired]
;   %local_ip6% [wireless+wired]
;   %essid%     [wireless]
;   %signal%    [wireless]
;   %upspeed%   [wireless+wired]
;   %downspeed% [wireless+wired]
;   %linkspeed% [wired]

; Default: %ifname% %local_ip%
;label-connected = %essid% %downspeed:9%
label-connected = %essid%
;label-connected-foreground = #eefafafa

; Default: (none)
label-disconnected = No Wireless
;label-disconnected-foreground = #66ffffff

; Default: (none)
;label-packetloss = %essid%
;label-packetloss-foreground = #eefafafa

; Only applies if <ramp-signal> is used
ramp-signal-0 = ðŸ˜±
ramp-signal-1 = ðŸ˜ 
ramp-signal-2 = ðŸ˜’
ramp-signal-3 = ðŸ˜Š
ramp-signal-4 = ðŸ˜ƒ
ramp-signal-5 = ðŸ˜ˆ

; Only applies if <animation-packetloss> is used
animation-packetloss-0 = âš 
animation-packetloss-0-foreground = #ffa64c
animation-packetloss-1 = ðŸ“¶
;animation-packetloss-1-foreground = #000000
; Framerate in milliseconds
animation-packetloss-framerate = 500

